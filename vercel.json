// vercel.json
{
    "builds": [
      { "src": "_site/**/*", "use": "@now/static" }
    ],
    "version": 2,
    "build": {
      "env": {
        "CI": "true",
        "BUNDLE_SILENCE_ROOT_WARNING": "1",
        "BUNDLE_APP_CONFIG": ".bundle",
        "BUNDLE_PATH": "vendor/bundle"
      },
      "command": "gem install jekyll && bundle install && bundle exec jekyll build"
    }
  }
  